{
  "buildType": {
    "default": "x64-Release",
    "description": "Build type",
    "choices": {
      "x64-Release": {
        "short": "x64-Release",
        "buildType": "RelWithDebInfo",
        "settings": {
          "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/bin"
        }
      },
      "x64-Debug": {
        "short": "x64-Debug",
        "buildType": "Debug",
        "settings": {
          "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/bin/debug"
        }
      }
    }
  },
  "useEmbree": {
    "default": "yes",
    "description": "Build with Embree",
    "choices": {
      "yes": {
        "short": "Embree",
        "settings": {
          "YOCTO_EMBREE": "yes"
        }
      },
      "no": {
        "short": "NoEmbree",
        "settings": {
          "YOCTO_EMBREE": "no"
        }
      }
    }
  },
  "useOpenGL": {
    "default": "yes",
    "description": "Build with OpenGL",
    "choices": {
      "yes": {
        "short": "OpenGL",
        "settings": {
          "YOCTO_OPENGL": "yes"
        }
      },
      "no": {
        "short": "NoOpenGL",
        "settings": {
          "YOCTO_OPENGL": "no"
        }
      }
    }
  }
